<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageInfo"
    android:background="#D93832">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/rectangle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="724dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/message_rect" />

                    <View
                        android:id="@+id/ellipse_3"
                        android:layout_width="450dp"
                        android:layout_height="250dp"
                        android:layout_alignStart="@+id/rectangle_2"
                        android:layout_alignEnd="@+id/rectangle_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="-28dp"
                        android:layout_marginTop="-60dp"
                        android:layout_marginEnd="-28dp"
                        android:background="@drawable/ellipse" />


                    <TextView
                        android:id="@+id/msg_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_alignStart="@+id/head"
                        android:layout_alignTop="@+id/head"
                        android:layout_alignEnd="@+id/head"
                        android:layout_alignBottom="@+id/head"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="38dp"
                        android:elevation="5dp"
                        android:text="@string/help"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/msg"
                        android:layout_width="293dp"
                        android:layout_height="591dp"
                        android:layout_alignStart="@+id/rectangle_2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="111dp"
                        android:layout_marginEnd="60dp"
                        android:background="@drawable/msg_rect"
                        android:elevation="5dp" />

                    <View
                        android:id="@+id/head"
                        android:layout_width="301dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/half_curve_black"
                        android:elevation="4dp" />


                    <View
                        android:id="@+id/pic1"
                        android:layout_width="267dp"
                        android:layout_height="154dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="142dp"
                        android:background="@drawable/rectangle_3"
                        android:elevation="5dp" />

                    <View
                        android:id="@+id/pic2"
                        android:layout_width="267dp"
                        android:layout_height="154dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="73dp"
                        android:layout_marginTop="331dp"
                        android:background="@drawable/rectangle_3"
                        android:elevation="5dp" />

                    <View
                        android:id="@+id/pic3"
                        android:layout_width="267dp"
                        android:layout_height="154dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="74dp"
                        android:layout_marginTop="517dp"
                        android:background="@drawable/rectangle_3"
                        android:elevation="5dp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.06"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.938"
                        app:srcCompat="@drawable/logo_bg"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/copyright"
                        android:layout_width="251dp"
                        android:layout_height="43dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="39dp"
                        android:layout_marginEnd="18dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Copyrights Â© Reserved 2021"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textDirection="ltr"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
